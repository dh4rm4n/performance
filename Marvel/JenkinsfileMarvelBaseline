import java.text.SimpleDateFormat
import java.sql.Timestamp
import java.util.concurrent.TimeUnit

def dateFormat = new SimpleDateFormat("yyyyMMddHHmm")
def date = new Date()
def timestamp = dateFormat.format(date).toString()

pipeline {

    agent {
        label params.AGENTE_EJECUCION
    }

    environment {
        SCM_URL = "https://github.com/dh4rm4n/performance.git"
        SCM_CREDENTIALS = "Main_User" //Credenciales
        SCM_BRANCH = "main" //Rama git
        NOMBRE_PROYECTO_GIT = "CPT" //Nombre del proyecto en GIT
        NOMBRE_TRANSACCION = "CPT - Marvel - Baseline" //Nombre del proyecto para asunto del correo
        //PROXY = "Example"
        EMAIL_DEVELOPERS = "dh4rm4n@gmail.com;"
        //S3_URL = "Example"
    }

    stages {
        stage('Obtener fuentes') {
            steps {
                script {               
					sh "git config --global --replace-all http.sslVerify false"
					checkout scm: ([
						$class: 'GitSCM',
						branches: [[name: "${SCM_BRANCH}"]],
						doGenerateSubmoduleConfigurations: false,
						extensions: [],
						submoduleCfg: [],
						userRemoteConfigs: [[credentialsId: "${SCM_CREDENTIALS}", url: "${SCM_URL}"]]
						
					])                    
                }
            }
        }

		stage('Performance_GenerarSet_Datos') {
            steps {   
                                    
                 sh "chmod 777 /opt/jmeter/"                    
                 echo 'Performance Guardar Build And JobName'
                 sh "/opt/jmeter/bin/jmeter -n -t $WORKSPACE/Marvel/Build.jmx -JJOB_NAME=Baseline_${env.BUILD_NUMBER}"       
				 //echo 'Ejecutar Generacion de token'
                 //sh "bzt $WORKSPACE/Marvel/Token.yml"
                   
                  }               
            }

        stage('Ejecutar pruebas') {
            steps {
				script {
					try{
						sh "chmod 777 /opt/jmeter/"
						echo "Ejecutar Performance Test"
						sh "bzt $WORKSPACE/Marvel/MarvelBaseline.yml $WORKSPACE/Marvel/passfail_config.yml"
						sh "tar zcvf Log_Marvel.zip Logs/Log_Marvel.csv"
						
					} 
					catch(err)
                    {
                       	echo 'Finalizo ejecucion con fallos'
						sh "tar zcvf Log_Marvel.zip Logs/Log_Marvel.csv"
						sh "neoload.exe -project Error.npl"						
                    }				
				}
            }
        }      
    }
	
	post {		
        success {  
        	enviarCorreo("SUCCESS")
        }  
        failure {  
            enviarCorreo("FAILURE")
        }
    }
}
def enviarCorreo(resultadoTest) {
